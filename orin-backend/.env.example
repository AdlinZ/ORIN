# ORIN Backend Environment Variables Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control

# ============================================
# Database Configuration
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=orindb
DB_USERNAME=root
DB_PASSWORD=your_secure_password_here

# ============================================
# JWT Configuration
# ============================================
# IMPORTANT: Generate a secure random key for production
# You can use: openssl rand -base64 64
JWT_SECRET=your_jwt_secret_key_at_least_256_bits_long_change_this_in_production

# JWT token expiration time in milliseconds (default: 24 hours)
JWT_EXPIRATION=86400000

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# Dify Integration
# ============================================
DIFY_DEFAULT_ENDPOINT=http://localhost:3000/v1
DIFY_API_TIMEOUT=30000
DIFY_HEALTH_CHECK_INTERVAL=60000

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# ============================================
# Application Settings
# ============================================
# Active profile: dev, prod, test
SPRING_PROFILES_ACTIVE=dev

# Server port
SERVER_PORT=8080
